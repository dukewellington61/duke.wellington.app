<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="container container_form">
  <div class="row">
    <div class="col-sm-8">

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control', type: 'text', id: 'name', placeholder: 'enter name of product'%>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control', type: 'text', id: 'description', placeholder: 'write a description but keep it snappy'%>
      </div>

    </div>

    <div class="col-sm-4">

      <div class="field">
        <%= form.label :image_url %>
        <%= form.text_field :image_url, class: 'form-control', type: 'text',placeholder: 'enter an image URL', id: 'image'%>
      </div>

      <div class="field">
      <%= form.label :colour %>
      <%= form.text_field :colour, class: 'form-control', type: 'text', id: 'colour', placeholder: 'enter a colour'%>
      </div>

      <div class="field">
      <%= form.label :price %>
      <%= form.text_field :price, class: 'form-control', type: 'float', id: 'price', placeholder: 'enter the price'%>
      </div>

      <div class="actions">
      <%= form.submit 'Create Product', class: 'btn btn-primary' %>
      </div>

    </div>
  </div>
</div>
<% end %>
